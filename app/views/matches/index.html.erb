

<h1>Listing Matches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Journey id</th>
      <th>Origin</th>
      <th>Destiny</th>
      <th>Origin time</th>
      <th>Destiny time</th>
      <th>Package id</th>
      <th>Accept time</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.journeyID_id %></td>
        <td><%= match.origin_id %></td>
        <td><%= match.destiny_id %></td>
        <td><%= (match.originTime).strftime("%d/%m/%Y %I:%M%p") %></td>
        <td><%= (match.destinyTime).strftime("%d/%m/%Y %I:%M%p") %></td>
        <td><%= match.packageID_id %></td>
        <td><%= match.acceptTime %></td>
        <td><%= match.price %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
